<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Google Play Store compliance.
   This file specifies what data can be backed up to Google Drive.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive user data from cloud backup -->
        <exclude domain="sharedpref" path="." />
        <exclude domain="database" path="." />
    </cloud-backup>
    <device-transfer>
        <!-- Allow app data transfer between devices -->
        <include domain="sharedpref" path="." />
        <include domain="file" path="." />
    </device-transfer>
</data-extraction-rules>
